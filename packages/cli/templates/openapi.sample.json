{
  "openapi": "3.0.0",
  "info": {
    "title": "Glubean Sample API (mock)",
    "version": "0.0.0",
    "description": "A mock OpenAPI spec shipped with `glubean init` for AI-assisted test generation. The real sample API service is not ready yet."
  },
  "servers": [
    {
      "url": "https://sample-api.glubean.com",
      "description": "Mock URL"
    }
  ],
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "API key"
      }
    },
    "schemas": {
      "ErrorResponse": {
        "type": "object",
        "required": [
          "error"
        ],
        "properties": {
          "error": {
            "type": "object",
            "required": [
              "code",
              "message"
            ],
            "properties": {
              "code": {
                "type": "string",
                "example": "VALIDATION_ERROR"
              },
              "message": {
                "type": "string",
                "example": "Invalid payload"
              },
              "fields": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "path",
                    "reason"
                  ],
                  "properties": {
                    "path": {
                      "type": "string",
                      "example": "email"
                    },
                    "reason": {
                      "type": "string",
                      "example": "must be a valid email"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "security": [
    {
      "ApiKeyAuth": []
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "operationId": "healthCheck",
        "tags": [
          "System"
        ],
        "responses": {
          "200": {
            "description": "Service health",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    }
  }
}